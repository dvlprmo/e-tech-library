
<div class="container">
    <form action="/auth/signup" method="POST">
        <div class="row mb-3">
            <div class="col-6">
                <label>First Name</label>
                <input name="firstname" class="form-input"/>
            </div>
            <div class="col-6">
                <label>Last Name</label>
                <input name="lastname" class="form-input"/>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-6">
                <label>Email</label>
                <input name="email" class="form-input" />
            </div>
            <div class="col-6">
                <label>Password</label>
                <input name="password" type="password" class="form-input"/>
            </div>
        </div>
        <button class="btn btn-primary">Signup</button>
    </form>
</div>

